            <Image x:Name="TwoD" Source="Assets/2D.png" Width="125.46" Height="190.08" Visibility="Collapsed"/>
            <Image x:Name="ThreeD" Source="Assets/3D.png" Width="125.46" Height="190.08" Visibility="Collapsed"/>
            <Image x:Name="FourD" Source="Assets/4D.png" Width="125.46" Height="190.08" Visibility="Collapsed"/>
            <Image x:Name="FiveD" Source="Assets/5D.png" Width="125.46" Height="190.08" Visibility="Collapsed"/>
            <Image x:Name="SixD" Source="Assets/6D.png" Width="125.46" Height="190.08" Visibility="Collapsed"/>
            <Image x:Name="SevenD" Source="Assets/7D.png" Width="125.46" Height="190.08" Visibility="Collapsed"/>
            <Image x:Name="EightD" Source="Assets/8D.png" Width="125.46" Height="190.08" Visibility="Collapsed"/>
            <Image x:Name="NineD" Source="Assets/9D.png" Width="125.46" Height="190.08" Visibility="Collapsed"/>
            <Image x:Name="TenD" Source="Assets/10D.png" Width="125.46" Height="190.08" Visibility="Collapsed"/>
            <Image x:Name="JackD" Source="Assets/JD.png" Width="125.46" Height="190.08" Visibility="Collapsed"/>
            <Image x:Name="QueenD" Source="Assets/QD.png" Width="125.46" Height="190.08" Visibility="Collapsed"/>
            <Image x:Name="KingD" Source="Assets/KD.png" Width="125.46" Height="190.08" Visibility="Collapsed"/>
        </Canvas>
    </Grid>
</Page>
