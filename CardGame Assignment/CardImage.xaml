    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Canvas Width="125.46" Height="190.08">
            <Image x:Name="Back" Source="Assets/red_back.png" Width="125.46" Height="190.08" Visibility="Visible"/>
